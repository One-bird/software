<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fxmpay.software.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="cn.fxmpay.software.model.entity.User">
    <!--@Table [user]-->
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="password" jdbcType="VARCHAR" property="password" />
  </resultMap>
  <sql id="Base_Column_List">
    id, username, phone , [password]
  </sql>


<select id="findAllUser" resultType="cn.fxmpay.software.model.entity.User">
select * from [user];
</select>

<!--auto on 2022-05-19-->
  <select id="findById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from [user]
        where id=#{id,jdbcType=VARCHAR}
    </select>

<!--auto on 2022-05-20-->
<!--  <select id="findByPhoneAndPassword" resultMap="BaseResultMap">-->
<!--        select-->
<!--        <include refid="Base_Column_List"/>-->
<!--        from [user]-->
<!--        where phone=#{phone,jdbcType=VARCHAR} and [password]=#{password,jdbcType=VARCHAR}-->
<!--    </select>-->
    <select id="findByPhoneAndPassword" resultType="cn.fxmpay.software.model.entity.User">
        select
        *
        from [user]
        where phone=#{phone,jdbcType=VARCHAR} and password=#{password,jdbcType=VARCHAR}
    </select>

<!--auto on 2022-05-21-->
  <insert id="insertList" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO [user](
        username,
        phone,
        password
        )VALUES
        <foreach collection="list" item="element" index="index" separator=",">
            (
            #{element.username,jdbcType=VARCHAR},
            #{element.phone,jdbcType=VARCHAR},
            #{element.password,jdbcType=VARCHAR}
            )
        </foreach>
    </insert>
</mapper>